extends ../layout.pug

block content
  p Show all categories

  a(href="/category/create" class="btn btn-primary") Create new category
  table(class="table")
    tr
      th No
      th Category Name
      th(colspan=2) Action
    each category, index in categories
      tr
        td= index + 1
        td= category.name
        td
          a(href=`/category/${category.id}/edit` class="btn btn-warning") Edit
        td
          form(action=`/category/${category.id}?method=DELETE` method="POST")
            input(type="submit" value="Delete" class="btn btn-danger")
